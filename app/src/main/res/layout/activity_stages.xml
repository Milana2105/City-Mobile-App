<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="start"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/back"
    android:layout_height="match_parent"
    tools:context=".User.StagesActivity">
<TextView
    android:layout_margin="50dp"
    android:background="#0CFFFB00"
    android:textSize="30dp"
    android:gravity="center"
    android:elevation="100dp"
    android:text="Main \nCategories"

    android:layout_width="match_parent"
    android:layout_height="100dp"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="139dp">
<ImageView
    android:id="@+id/tor"
    android:layout_weight="0.5"
    android:layout_width="0dp"
    android:src="@drawable/traveler"
    android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/hotels"
            android:src="@drawable/hotel"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="Torists Places"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center"
            android:text="Hotels"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="139dp">
        <ImageView
            android:layout_weight="0.5"
            android:id="@+id/busstans"
            android:layout_width="0dp"
            android:src="@drawable/transport"
            android:layout_height="match_parent"/>

        <ImageView
            android:src="@drawable/hos"
            android:layout_weight="0.5"
            android:id="@+id/hospitals"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="Bus Stand"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            tools:ignore="HardcodedText" />
        <TextView
            android:gravity="center"
            android:text="Hospitals"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>